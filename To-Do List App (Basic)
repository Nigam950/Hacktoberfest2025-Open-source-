#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<string> tasks;
    int choice;
    string task;

    while (true) {
        cout << "\n1. Add Task\n2. View Tasks\n3. Exit\nChoose: ";
        cin >> choice;
        cin.ignore();

        if (choice == 1) {
            cout << "Enter task: ";
            getline(cin, task);
            tasks.push_back(task);
        } 
        else if (choice == 2) {
            cout << "\nYour Tasks:\n";
            for (int i = 0; i < tasks.size(); ++i)
                cout << i + 1 << ". " << tasks[i] << endl;
        } 
        else if (choice == 3) break;
        else cout << "Invalid choice!\n";
    }
    return 0;
}
